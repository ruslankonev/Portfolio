.wrapper--14
	{}
	background-image radial-gradient(circle closest-corner at 50% 50%,#051d4a 20%,#000f19 56%)
	background-repeat no-repeat
	background-color #000
	background-position 0 100%

.section--14
	{}
	height auto


.footer
	{}
	width 100% // for FF
	display flex
	flex-direction column
	align-items center

	&__social-box
		width 100% // for FF
		max-width 1320px
		margin-bottom 7rem
		display flex
		justify-content center
		flex-wrap wrap


	&__social-element
		{}
		position relative
		max-width 290px
		height 150px
		width 100%
		border 2px solid #00f
		border-top-color transparent


		&:first-child
			border-left-color transparent
		&:last-child
			border-right-color transparent

		&:nth-child(4)
			border-right-color transparent
		&:nth-child(6)
			border-bottom-color transparent
		&:nth-child(5)
			border-bottom-color transparent
			border-left-color transparent
		&:nth-child(6)
			border-bottom-color transparent
		&:nth-child(7)
			border-bottom-color transparent
		&:nth-child(8)
			border-bottom-color transparent


		&:nth-child(1)
		&:nth-child(2)
		&:nth-child(3)
			{}

			&::after
				content ''
				position absolute
				bottom -27px
				right -27px
				width 50px
				height 50px
				background-image radial-gradient(circle closest-side at 25px 25px,#07fbf4 2%,#004fff 10%,#0000 70%)
				background-repeat no-repeat


		&:nth-child(1)
			{}
			z-index 10

		&:nth-child(2)
			{}
			z-index 9

		&:nth-child(3)
			{}
			z-index 8




	&__social-svg
		{}


	&__img
		{}
		box-sizing border-box
		padding 20px
		width 100%
		height 100%


		&:hover
			filter hue-rotate(30deg)


	// footer block 2
	&__button
		{}
		position relative
		margin 2rem 0 5rem
		padding 26px 30px
		max-width 494px
		width 100%
		font-size 2.25rem
		line-height 2.625rem
		text-transform uppercase
		color cyan-main
		border 2px solid blue
		background-color transparent
		cursor pointer
		box-shadow 0px 0px 55px 5px #002BFF


		&::after
			content ''
			position absolute
			top -26px
			left -26px
			width 50px
			height 50px
			background-image radial-gradient(circle closest-side at 25px 25px,#07fbf4 2%,#004fff 10%,#0000 70%)
			background-repeat no-repeat


	&__navigation
		{}
		margin-bottom 2rem
		max-width 720px
		width 100%


	&__list
		{}
		padding 0px
		display flex
		justify-content space-between
		list-style none


	&__item
		{}


	&__link
		{}
		text-transform uppercase


	&__contacts
		{}
		max-width 1260px
		width 100%


	&__contacts-caption
		{}
		margin 2rem 0 3rem
		font-size 1.5rem
		line-height 2rem
		font-weight 600
		text-align center
		text-transform uppercase
		color cyan-main

	&__contacts-wr
		{}
		display flex
		flex-wrap wrap
		justify-content space-between


	&__contacts-element
		{}
		position relative
		box-sizing border-box
		padding 40px
		width 30%
		display flex
		flex-direction column
		align-items center
		border 4px solid #0000
		border-image linear-gradient(to top left,#006bff 0%,#00098e 100%)
		border-image-slice 1
		color #fff

		&::after
			content ''
			position absolute
			top -26px
			left -26px
			width 50px
			height 50px
			background-image radial-gradient(circle closest-side at 25px 25px,#07fbf4 2%,#004fff 10%,#0000 70%)
			background-repeat no-repeat

		span
			font-size 1.125rem
			line-height 1.375rem
			text-align center

	&__email
		{}
		margin 2rem 0
		display block
		font-size 1.5rem
		line-height 2rem
		text-align center
		color cyan-main



