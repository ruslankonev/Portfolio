.section--1
	{}


.hero
	{}
	margin-top 10rem
	width 100%
	display flex
	flex-direction column
	align-items center


	&__btn
		{}
		font-size 1rem
		line-height 1rem


	&__video-wr
		{}
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		height 300%
		top -100%


	&__iframe
		{}
		position absolute
		top 0
		left 0
		width 100%
		height 100%


	&__footer-wr
		margin-top 12.5rem
		width 100%
		display flex
		justify-content space-around
		align-items center


	&__caption
		{}
		max-width 1064px
		font-size 3.375rem
		line-height 3.5rem
		font-weight 300
		color #fff
		text-align center



	&__expert-coin
		{}
		padding 20px
		max-width 230px
		height auto

		img
			width 100%



	&__timer-wr
		{}
		padding 20px
		max-width 540px
		display flex
		flex-wrap wrap
		justify-content space-between



	&__timer-caption
		{}
		margin-top 0px
		width 100%
		font-size 1.5rem
		line-height 1.5rem
		text-align center
		color #fff


	&__timer-item
		{}
		padding-left 20px
		width 100px
		height 90px
		background url('../svg/timer-star.svg') no-repeat 0 100%


	&__timer-number
		{}
		display block
		font-size 3.125rem
		line-height 2.825rem
		text-align right
		color #fff


	&__timer-units
		{}
		color #fff
		display block
		font-size .85rem
		line-height 1rem
		text-align right


	&__social-box
		{}
		padding 20px
		max-width 310px
		display flex
		flex-wrap wrap
		justify-content center


	&__svg
		{}
		width 2rem
		height 2rem

		&--tg
			box-shadow 1px 1px 5px #27a5e7
			border-radius 50%
			transform scale(1.5)
			animation starpuls 3s infinite, shadowwave 2s infinite


	&__social-element
		{}


	&__talent-coin
		{}
		width 100%
		max-width 166px



	&__talent-img
		{}
		width 100%
		height auto


	&__social-link
		{}
		display block
		padding 20px

		&--tg
			{}
			// 50% filter invert(1)
			// animation star 3s infinite

		&--in
			{}

		&--tw
			{}

		&--fb
			{}

		&--yt
			{}

		&--bt
			{}

		&--mi
			{}

		&--rd
			{}


	&__img
		{}
		width 30px
		height 30px





