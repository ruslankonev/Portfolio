.modalz
	{}
	display none
	position fixed
	top 5%
	left 50%
	transform translateX(-50%)
	outline 1px solid black
	background-color #fff


.account
	{}
	padding 50px


	&__form
		{}


	&__form-header
		{}
		display flex
		flex-direction column
		flex-wrap wrap

		div
			{}
			position relative
			margin 20px 0px 60px



	&__label-login
		{}
		position absolute
		top -30px
		font-size 2rem



	&__label-password
		{}
		position absolute
		top -30px
		font-size 2rem



	&__login
		{}
		box-sizing border-box
		width 100%
		padding 20px



	&__password
		{}
		box-sizing border-box
		width 100%
		padding 20px


	&__form-footer
		{}
		display flex
		flex-wrap wrap
		justify-content space-between



	&__label-remember
		{}
		font-size 20px


	&__remember
		{}
		width 18px
		height 14px


	&__link
		{}
		text-decoration none

		&:hover
			text-decoration underline

		&--forgot
			{}


	&__btn
		{}
		margin 30px 0px
		box-sizing border-box
		width 100%
		padding 20px 30px
		border 1px solid blue
		border-radius 12px
		background-color transparent

