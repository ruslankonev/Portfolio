		// MOBLIE SLIDER

		&__container
			margin-bottom 1rem
			display flex
			justify-content space-between
			position relative
			max-width 1000px
			width 100%
			height 210px
			overflow hidden

			&--desktop
				{}
				display none


		&__container-inner
			display flex
			position absolute
			align-items center
			height 100%
			transition transform 0.45s
			width auto

			&--current
				transform scale(1.5)


		&__text-inner
			box-sizing border-box
			padding 0 20px
			width 100%
			display flex
			justify-content center
			font-size 12px
			text-align center
			color black


		&__text
			display none
			color #fff

			&--current
				display block

			h3
				font-size 1rem
				line-height 1.1

			p
				font-size .9rem
				line-height 1.1


	.button
		{}
		max-width 60px
		width 100%
		cursor pointer
		z-index 2
		border none
		padding 20px

		&:focus
			{}
			filter invert(1)
			outline none

		&__prev
			background transparent url('../svg/arrow-right-light.svg') no-repeat 50% 50%
			background-size 40px
			transform rotate(180deg)


		&__next
			background transparent url('../svg/arrow-right-light.svg') no-repeat 50% 50%
			background-size 40px


