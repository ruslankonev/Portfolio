.wrapper--12
	{}
	background-image radial-gradient(circle closest-corner at 50% 50%,#051d4a 20%,#000f19 56%)
	background-repeat no-repeat
	background-color #000
	background-position 0 100%

.section--12
	{}
	height auto!important

.slider
	{}
	width 100%


	&__caption
		{}
		margin 10rem 0
		caption(2.875rem, 2.5rem, 600)
		color cyan-main

		span
			display block
			width 100%


	&__container
		{}
		position relative
		z-index 5

		&--mobile
			{}
			display none

		&--desktop
			{}




	&__row
		{}
		display flex
		justify-content space-around



	&__item
		{}
		// background-color rgba(222,111,0, 0.3)
		max-width 304px
		width 100%
		min-height 318px

	&__starz
		{}
		position relative
		height 290px
		background url('../img/bg/star-rastr.png') no-repeat
		background-size contain



	&__star-title
		{}
		width 100%
		position absolute
		top 42%
		left 50%
		transform translate(-50%)
		text-align center
		text-transform uppercase
		color #fff
		text-shadow 1px 1px 2px rgba(0,0,0, 1)



	&__star-img
		{}
		position absolute
		top 50%
		left 50%
		transform translate(-50%)


	&__avatar
		{}
		display block

	// Описание личности
	&__title
		margin 1.5rem auto 3rem
		max-width 120px
		text-align center
		color #fff


	&__sub-caption
		margin-bottom 7rem
		padding 0 20px
		text-align center
		font-size 1.5rem
		line-height 2rem
		text-transform uppercase
		color cyan-main


	&__logotype
		{}
		position absolute
		top 50%
		left 50%
		max-width 1400px
		width 100%
		transform translate(-50%)


	&__container-mobile
	&__text-inner
		{}
		display none



