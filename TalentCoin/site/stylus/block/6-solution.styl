.wrapper--6
	{}
	background url('../img/bg/section--6.jpg') no-repeat 0
	background-size cover

.section--6
	{}
	height 800px


.solution
	{}

	&__caption
		margin-bottom 5rem
		font-size 2.875rem
		line-height 3.875rem
		font-weight 600 // semibold
		text-align center
		color cyan-main


	&__list
		padding 0
		display flex
		flex-wrap wrap
		justify-content space-between


	&__item
		box-sizing border-box
		margin 20px
		padding 40px 45px
		position relative
		width 22%
		list-style none
		border 4px solid transparent
		border-image linear-gradient(to top left, #006BFF 0%, #00098E 100%)
		border-image-slice 1
		font-size 1rem
		line-height 1rem
		color cyan-main
		text-align center


		&::before
			{}
			content ''
			position absolute
			top -26px
			left -26px
			width 50px
			height 50px
			background-image radial-gradient(circle closest-side at 25px 25px,#07fbf4 2%, #004FFF 10%, #0000 70%)
			background-repeat no-repeat



